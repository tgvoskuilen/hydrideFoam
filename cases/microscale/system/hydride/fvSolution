FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    rho
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-7;
        relTol          0.1;
    }

    rhoFinal
    {
        $rho;
        tolerance       1e-7;
        relTol          0;
    }

    pFluid
    {
        solver           GAMG;
        tolerance        1e-7;
        relTol           0.01;

        smoother         GaussSeidel;

        cacheAgglomeration true;
        nCellsInCoarsestLevel 10;
        agglomerator     faceAreaPair;
        mergeLevels      1;

        maxIter          20;
    }

    pFluidFinal
    {
        $pFluid;
        tolerance        1e-7;
        relTol           0;
        maxIter          20;
    }

    Tfluid
    {
        solver           GAMG;
        tolerance        1e-7;
        relTol           0.01;

        smoother         GaussSeidel;

        cacheAgglomeration true;
        nCellsInCoarsestLevel 10;
        agglomerator     faceAreaPair;
        mergeLevels      1;

        maxIter          100;
    }

    TfluidFinal
    {
        $Tfluid;
        tolerance        1e-7;
        relTol           0;
    }

    "(U|h|k|epsilon|R|F)"
    {
        solver           PCG;
        preconditioner   DIC;
        tolerance        1e-7;
        relTol           0.1;
    }

    "(U|h|k|epsilon|R|F)Final"
    {
        $U;
        tolerance        1e-7;
        relTol           0;
    }

}

PIMPLE
{
    momentumPredictor   on;
    nCorrectors         1;
    nNonOrthogonalCorrectors 1;
}

relaxationFactors
{
    fields
    {
    }
    equations
    {
        "h.*"           1;
        "U.*"           1;
    }
}

